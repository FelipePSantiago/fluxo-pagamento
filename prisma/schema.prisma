// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  isAdmin       Boolean   @default(false)
  has2FA        Boolean   @default(false)
  twoFactorSecret String?
  is2FAVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  properties    Property[]
  
  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Property {
  id              String   @id @default(cuid())
  name            String
  address         String
  city            String
  state           String
  value           Float?
  status          String   @default("available")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdBy       String
  enterpriseName  String?
  description     String?
  image           String?
  type            String?
  totalUnits      Int?
  availableUnits  Int?
  
  user            User     @relation(fields: [createdBy], references: [id])
  propertyPricing PropertyPricing[]
  
  @@map("properties")
}

model PropertyPricing {
  id                   String   @id @default(cuid())
  propertyId           String
  unitType             String?
  unitNumber           String?
  value                Float?
  status               String   @default("available")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  privateArea          Float?
  block                String?
  sunPosition          String?
  typology             String?
  parkingSpaces        Int?
  appraisalValue       Float?
  financingValue       Float?
  saleValue            Float?
  payments             String? // JSON as string
  installments         String? // JSON as string
  notaryPaymentMethod  String?
  notaryInstallments   Int?
  brokerName           String?
  brokerCreci          String?
  selectedUnit         String?
  
  property             Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  @@map("property_pricing")
}